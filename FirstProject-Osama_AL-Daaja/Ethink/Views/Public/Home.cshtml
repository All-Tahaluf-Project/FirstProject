<div class="container-xl" style="background: #ff7100;">
    <div class="row" style="margin-right:0px;">
        <div class="col-lg-8 mx-auto">
            <h2>Testimonials</h2>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Carousel indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    @for (int i = 0; i < Model.Testimonial.Length; i++)
                    {
                        <li data-target="#myCarousel" data-slide-to="@i"></li>
                    }
                </ol>
                <!-- Wrapper for carousel items -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="img-box"><img src="/Content/Private_Layout/images/graduation-hat.png" alt=""></div>
                        <p class="testimonial">E thick</p>
                        <p class="overview"><b></b></p>
                    </div>
                    @for (int i = 0; i < Model.Testimonial.Length; i++)
                    {
                        <div class="carousel-item">
                            <div class="img-box"><img src="/Content/Private_Layout/images/graduation-hat.png" alt=""></div>
                            <p class="testimonial">@Model.Testimonial[i].Text</p>
                            <p class="overview"></p>
                        </div>
                    }
                </div>
                <!-- Carousel controls -->
                <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                    <i class="fa fa-angle-left"></i>
                </a>
                <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                    <i class="fa fa-angle-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>













