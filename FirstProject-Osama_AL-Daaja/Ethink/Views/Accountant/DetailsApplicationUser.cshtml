<link rel="stylesheet" href="~/Content/Profile/Css.css" />



<div class="container">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @if (Model.ImageName == "")
                            {
                                <img src="~/Content/AdminPage/Image/online-course.png" alt="Admin" class="rounded-circle" width="150" height="150">
                            }
                            else
                            {
                                <img src="~/Assets/Users/@Model.ImageName" alt="Admin" class="rounded-circle" width="150" height="150">
                            }
                            <div class="mt-3">
                                <h4>@Model.UserName</h4>
                                <p class="text-secondary mb-1">@Model.NickName</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nickname</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.NickName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.PhoneNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Gender</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @if (Model.Gender)
                                {
                                    <img src="~/Content/AdminPage/Image/man.png" style="height: 30px; width: 30px;" />
                                }
                                else
                                {
                                    <img src="~/Content/AdminPage/Image/woman.png" style="height: 30px; width: 30px;" />
                                }
                            </div>
                        </div>
                        <hr />
                    </div>



                </div>
            </div>

        </div>
    </div>

</div>




















<div class="container">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-1">
                            </div>
                            <div class="col-sm-2">
                                <h6 class="mb-0">Name</h6>
                            </div>
                            <div class="col-sm-2">
                                <h6 class="mb-0">Number</h6>
                            </div>
                            <div class="col-sm-2">
                                <h6 class="mb-0">Trainer</h6>
                            </div>
                            <div class="col-sm-2">
                                <h6 class="mb-0">Payments</h6>
                            </div>
                            <div class="col-sm-2">
                                <h6 class="mb-0">Financial Report</h6>
                            </div>
                            <div class="col-sm-1">
                            </div>
                        </div>
                        <hr />
                        @foreach (var item in Model.Course_Trainee)
                        {

                            <div class="row">
                                <div class="col-sm-1">
                                </div>
                                <div class="col-sm-2">
                                    @item.CourseSections.Course.Name
                                </div>
                                <div class="col-sm-2">
                                    @item.CourseSections.Number
                                </div>
                                <div class="col-sm-2">
                                    @item.CourseSections.Employee.ApplicationUser.NickName
                                </div>
                                <div class="col-sm-2">
                                    @Model.PayCard.Sum(a => a.PayLog.Where(p => p.CourseSections == item.CourseSections).Sum(v => v.Value)) $
                                </div>
                                <div class="col-sm-2">
                                    <a href="@Url.Action("FinancialReportTreainee", new { id = item.Id })" class="btn btn-info btn-lg btn-block">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                </div>
                                <div class="col-sm-1">
                                </div>
                            </div>
                            <hr />
                        }
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>





