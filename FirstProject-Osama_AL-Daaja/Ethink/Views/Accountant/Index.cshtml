@model Ethink.Models.DTO.DTOAccountantPage
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Private_Layout.cshtml";
}


<link rel="stylesheet" href="~/Content/AdminPage/Css.css">


<link rel="stylesheet" href="~/Content/Profile/Css.css" />



<div class="container">
    <div class="main-body">
        @using (Html.BeginForm("Index", "Accountant", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="search">
                        @Html.Editor("Start", new { htmlAttributes = new { @type = "date", @style = "width : 100%", @class = "search-input", placeholder = "UserName" } })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="search">
                        @Html.Editor("End", new { htmlAttributes = new { @type = "date", @style = "width : 100%", @class = "search-input", placeholder = "UserName" } })
                    </div>
                </div>

                <div class="col-md-2" style="display: flex;">
                    <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="fa fa-search"></i></button>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("PDF")" class="btn btn-outline-success">
                        Download
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<section id="PrintPDF">
    <div class="container">
        <div class="row">

            <div class="col-md-4">
                <div class="card profile-card-1">
                    <img src="~/Content/Accountant/Image/pexels-pixabay-164688.jpg" alt="profile-sample1" class="background"/>
                    <img src="/Content/Accountant/Image/money-bag.png" alt="profile-image" class="profile"/>
                    <div class="card-content">
                        <h2>
                            Total
                            
                            <small>@Model.SumPay $</small>
                        </h2>
                    </div>
                </div>
                <p class="mt-3 w-100 float-left text-center"><strong>Total</strong></p>
            </div>

            <div class="col-md-8">
                <div class="card profile-card-1">
                    <img src="~/Content/Accountant/Image/pexels-pixabay-106152.jpg" alt="profile-sample1" class="background"/>
                    <img src="/Content/Accountant/Image/cash-flow.png" alt="profile-image" class="profile"/>
                    <div class="card-content">
                        <h2>
                            @Model.CourseSections.Course.Name
                            
                            <small>@Model.CourseSections.PayLog.Where(a => !a.Status).Sum(a => a.Value) $</small>
                        </h2>
                    </div>
                </div>
                <p class="mt-3 w-100 float-left text-center"><strong>Best Section</strong></p>
            </div>

        </div>

        <div class="row">

            <div class="col-md-4">
                <div class="card profile-card-1">
                    <img src="~/Content/Accountant/Image/pexels-steve-johnson-1006060.jpg" alt="profile-sample1" class="background"/>
                    <img src="/Content/Accountant/Image/forex.png" alt="profile-image" class="profile" />
                    <div class="card-content">
                        <h2>
                            Count Of Payments
                            
                            <small>@Model.CountOfPay</small>
                        </h2>
                    </div>
                </div>
                <p class="mt-3 w-100 float-left text-center"><strong>Count Of Payments</strong></p>
            </div>
            <div class="col-md-4">
                <div class="card profile-card-1">
                    <img src="~/Content/Accountant/Image/pexels-karolina-grabowska-4968653.jpg" alt="profile-sample1" class="background"/>
                    <img src="/Content/Accountant/Image/profit.png" alt="profile-image" class="profile" />
                    <div class="card-content">
                        <h2>
                            <i class="fas fa-check"></i>
                            
                            <small>@Model.CountOfPayNotProblem</small>
                        </h2>
                    </div>
                </div>
                <p class="mt-3 w-100 float-left text-center"><strong><i class="fas fa-check"></i></strong></p>
            </div>
            <div class="col-md-4">
                <div class="card profile-card-1">
                    <img src="~/Content/Accountant/Image/pexels-karolina-grabowska-4386433.jpg" alt="profile-sample1" class="background"/>
                    <img src="/Content/Accountant/Image/loss.png" alt="profile-image" class="profile" />
                    <div class="card-content">
                        <h2>
                            <i class="fas fa-times"></i>
                            
                            <small>@Model.CountOfPayProblem</small>
                        </h2>
                    </div>
                </div>
                <p class="mt-3 w-100 float-left text-center"><strong><i class="fas fa-times"></i></strong></p>
            </div>

        </div>
    </div>
</section>












































<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#btnSubmit").click(function () {
            $("input[name='ExportData']").val($("#PrintPDF").html());
        });
    });
</script>

