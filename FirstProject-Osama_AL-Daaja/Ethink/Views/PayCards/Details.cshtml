@model Ethink.Models.PayCard

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Private_Layout.cshtml";
}

















<link rel="stylesheet" href="~/Content/Profile/Css.css" />



<div class="container">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @if (Model.Name == "mastercard")
                            {
                                <img src="~/Content/PayCard/Img/mastercard.png" alt="Admin" class="rounded-circle" width="150" height="150">
                            }
                            @if (Model.Name == "paypal")
                            {
                                <img src="~/Content/PayCard/Img/paypal.png" alt="Admin" class="rounded-circle" width="150" height="150">
                            }
                            @if (Model.Name == "visa")
                            {
                                <img src="~/Content/PayCard/Img/visa.png" alt="Admin" class="rounded-circle" width="150" height="150">
                            }
                            <div class="mt-3">
                                <h4>@Model.Total $</h4>
                            </div>
                            <div class="col-12" style="text-align:center">
                                <a href="@Url.Action("Index")" class="btn btn-danger">
                                    <i class="far fa-arrow-alt-circle-left"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">


                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Date</h6>
                            </div>
                            <div class="col-sm-3 ">
                                <h6 class="mb-0">Status</h6>
                            </div>
                            <div class="col-sm-3 ">
                                <h6 class="mb-0">Value</h6>
                            </div>
                            <div class="col-sm-3">
                                <a href="@Url.Action("CreatePayLog",new { id = Model.Id})" class="btn btn-success">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <hr>
                        @foreach (var item in Model.PayLog)
                        {
                    <div class="row">
                        <div class="col-sm-3 text-secondary">
                            <p>@item.Date</p>
                        </div>
                        <div class="col-sm-3 text-secondary">
                            @if (item.Status)
                            {
                                <p style="color:red">Problem</p>
                            }
                            else
                            {
                                <p style="color:green">No Problem</p>
                            }
                        </div>
                        <div class="col-sm-3 text-secondary">
                            <p>@item.Value $</p>
                        </div>
                        <div class="col-sm-3 text-secondary">
                        </div>
                    </div>
                            <hr>
                        }
                    </div>
                </div>



            </div>


