                        <br />
                        <div class="row">
                            <div class="col-sm-12" style="text-align:center">
                                <h6 class="mb-0">Solutions</h6>
                            </div>
                        </div>
                        <hr />
                        @foreach (var item in Model.Solutions)
                        {
                            <div class="row">
                                <div class="col-sm-2">
                                    <h6 class="mb-0">Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @item.Name
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12" style="text-align:center">
                                    @Html.ActionLink("Submit", "SubmitSolution", "Trainee", new { id = item.Id }, new { style = "margin:10px", @class = "btn btn-success" })
                                </div>
                                <hr><br />
                            </div>

                        }
                    </div>
                </div>
