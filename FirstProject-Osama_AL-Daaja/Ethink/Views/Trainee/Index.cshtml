        </p>
        @using (Html.BeginForm("AddTestimonial", "Trainee", FormMethod.Get))
        {
            @Html.Editor("Text", new { htmlAttributes = new { @style = "width : 78%", @type = "text", @class = "InputStyle", placeholder = "Text" } })
