@model Ethink.Models.ApplicationUser

@{
    ViewBag.Title = "DetailsTraineeForEnroll";
    Layout = "~/Views/Shared/_Private_Layout.cshtml";
}

<div class="container">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @if (Model.ImageName == "")
                            {
                                <img src="~/Content/AdminPage/Image/online-course.png" alt="Admin" class="rounded-circle" width="150" height="150">
                            }
                            else
                            {
                                <img src="~/Assets/Users/@Model.ImageName" alt="Admin" class="rounded-circle" width="150" height="150">
                            }
                            <div class="mt-3">
                                <h4>@Model.UserName</h4>
                                <p class="text-secondary mb-1">@Model.NickName</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nickname</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.NickName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.PhoneNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Gender</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @if (Model.Gender)
                                {
                                    <img src="~/Content/AdminPage/Image/man.png" style="height: 30px; width: 30px;" />
                                }
                                else
                                {
                                    <img src="~/Content/AdminPage/Image/woman.png" style="height: 30px; width: 30px;" />
                                }
                            </div>
                        </div>
                        <hr />

                    </div>



                </div>
            </div>

        </div>
    </div>

</div>




@if (Model.Course_Trainee.Any())
{



    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-2">
                                    <h6 class="mb-0"></h6>
                                </div>
                                <div class="col-sm-2">
                                    <h6 class="mb-0">Name</h6>
                                </div>
                                <div class="col-sm-2">
                                    <h6 class="mb-0">Number</h6>
                                </div>
                                <div class="col-sm-2">
                                    <h6 class="mb-0">Start Date</h6>
                                </div>
                                <div class="col-sm-2">
                                    <h6 class="mb-0">End Date</h6>
                                </div>
                                <div class="col-sm-2">
                                    <h6 class="mb-0">Price</h6>
                                </div>
                            </div>
                            <hr />

                            @foreach (var item in Model.Course_Trainee)
                            {
                        <div class="row">
                            <div class="col-sm-2">
                                @if (item.CourseSections.Course.Image == "")
                                {
                                    <img src="~/Content/AdminPage/Image/online-course.png" style="height:70px; width:70px;border-radius: 1pc;">
                                }
                                else
                                {
                                    <img src="~/Assets/Courses/@item.CourseSections.Course.Image" style="height:70px; width:70px;border-radius: 1pc;">
                                }
                            </div>
                            <div class="col-sm-2">
                                <h6 class="mb-0">@item.CourseSections.Course.Name</h6>
                            </div>
                            <div class="col-sm-2">
                                <h6 class="mb-0">@item.CourseSections.Number</h6>
                            </div>
                            <div class="col-sm-2">
                                <h6 class="mb-0">@item.CourseSections.Course.StartDate</h6>
                            </div>
                            <div class="col-sm-2">
                                <h6 class="mb-0">@item.CourseSections.Course.EndDate</h6>
                            </div>
                            <div class="col-sm-2">
                                <h6 class="mb-0">@item.CourseSections.Course.Price</h6>
                            </div>
                        </div>
                                <hr />
                            }

                        </div>



                    </div>
                </div>

            </div>
        </div>

    </div>



}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-3">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-12">
                                <button type="button" class="btn btn-primary btn-lg btn-block">Not Have Courses</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}