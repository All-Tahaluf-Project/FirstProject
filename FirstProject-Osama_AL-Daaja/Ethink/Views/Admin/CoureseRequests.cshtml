<div class="container">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-2">
                                <h6 class="mb-0">Name : </h6>
                            </div>
                            <div class="col-sm-2 text-secondary">
                                @Model.ToArray()[0].Course.Name
                            </div>
                            <div class="col-sm-2 text-secondary">
                                Price
                            </div>
                            <div class="col-sm-2 text-secondary">
                                @Model.ToArray()[0].Course.Price
                            </div>
                            <div class="col-sm-2 text-secondary">
                                Category
                            </div>
                            <div class="col-sm-2 text-secondary">
                                @Model.ToArray()[0].Course.Categories.Name
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4">
                                <h6 class="mb-0">Date : </h6>
                            </div>
                            <div class="col-sm-4 text-secondary">
                                @Model.ToArray()[0].Course.StartDate =>
                            </div>
                            <div class="col-sm-4 text-secondary">
                                @Model.ToArray()[0].Course.EndDate
                            </div>
                        </div>
                        <hr>
                        @foreach (var item in Model)
                        {
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="main-box clearfix">
                                            <div class="table-responsive">
                                                <table class="table user-list">
                                                    <thead>
                                                        <tr>
                                                            <th><span></span></th>
                                                            <th><span>Date</span></th>
                                                            <th class="text-center"><span>Gender</span></th>
                                                            <th><span>Name</span></th>
                                                            <th><span>Count</span></th>
                                                            <th>&nbsp;</th>
                                                        </tr>
                                                    </thead>
                                                    @foreach (var Initem in item.RequestRegister)
                                                    {
                                                        <tbody>
                                                            <tr>
                                                                <td>
                                                                    <div class="row">
                                                                        <div class="col-md-6">
                                                                            @if (Initem.ApplicationUser.ImageName == "")
                                                                            {
                                                                                <img src="~/Content/AdminPage/Image/online-course.png" style="height:70px; width:70px;border-radius: 1pc;">
                                                                            }
                                                                            else
                                                                            {
                                                                                <img src="~/Assets/Users/@Initem.ApplicationUser.ImageName" style="height:70px; width:70px;border-radius: 1pc;">
                                                                            }
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <p class="user-link">@Initem.ApplicationUser.Email</p>
                                                                            <span class="user-subhead">@Initem.ApplicationUser.PhoneNumber</span>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <p>@Initem.Date</p>
                                                                </td>
                                                                <td>
                                                                    @if (Initem.ApplicationUser.Gender)
                                                                    {
                                                                        <img src="~/Content/AdminPage/Image/man.png" style="height: 30px; width: 30px;" />
                                                                    }
                                                                    else
                                                                    {
                                                                        <img src="~/Content/AdminPage/Image/woman.png" style="height: 30px; width: 30px;" />
                                                                    }
                                                                </td>
                                                                <td class="text-center">
                                                                    <span class="label label-default">@Initem.ApplicationUser.NickName</span>
                                                                </td>
                                                                <td>
                                                                    <p> @item.Course_Trainee.Count()/@item.MaxCount</p>
                                                                </td>
                                                                <td style="width: 20%;">
                                                                    <div class="row">
                                                                        <div class="col-md-4">
                                                                            <a href="@Url.Action("DetailsTraineeForEnroll" , new { id = Initem.ApplicationUser.Id})" class="table-link btn btn-info">
                                                                                <span class="fa-stack">
                                                                                    <i class="fas fa-question-circle"></i>
                                                                                </span>
                                                                            </a>

                                                                        </div>
                                                                        <div class="col-md-4">
                                                                            @Html.ActionLink("Accept", "Accept", new { id = Initem.Id },
new { style = "margin:10px", @class = "btn btn-success", onclick = "return confirm('Are You Sure.');" })
                                                                        </div>
                                                                        <div class="col-md-4">
                                                                            @Html.ActionLink("UnAccept", "UnAccept", new { id = Initem.Id },
new { style = "margin:10px", @class = "btn btn-danger", onclick = "return confirm('Are You Sure.');" })
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>




