<link rel="stylesheet" href="~/Content/PayCard/Css.css" />




@if (Model.CourseRequests.Any())
{
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="table-responsive">
                    <table class="table user-list">
                        <thead>
                            <tr>
                                <th><span></span></th>
                                <th><span>Period</span></th>
                                <th class="text-center"><span>Count Of Sections</span></th>
                                <th><span>Price</span></th>
                                <th><span>Total Count</span></th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.CourseRequests)
                        {
                        <tbody>
                            <tr>
                                <td>
                                    @if (item.Image == "")
                                    {
                                        <img src="~/Content/AdminPage/Image/online-course.png" style="height:70px; width:70px;border-radius: 1pc;">
                                    }
                                    else
                                    {
                                        <img src="~/Assets/Courses/@item.Image" style="height:70px; width:70px;border-radius: 1pc;">
                                    }
                                    <p class="user-link">@item.Name</p>
                                    <span class="user-subhead">@item.Categories.Name</span>
                                </td>
                                <td>
                                    @item.StartDate => @item.EndDate
                                </td>
                                <td class="text-center">
                                    <span class="label label-default">@item.CourseSections.Count()</span>
                                </td>
                                <td>
                                    <p>@item.Price $</p>
                                </td>
                                <td>
                                    <p> @item.CourseSections.Sum(a => a.RequestRegister.Count())/@item.CourseSections.Sum(a => a.MaxCount)</p>
                                </td>
                                <td style="width: 20%;">
                                    <a href="@Url.Action("CoureseRequests", new { id = item.Id })" class="table-link success">
                                        <span class="fa-stack">
                                            <i class="fas fa-question-circle"></i>
                                        </span>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
}






